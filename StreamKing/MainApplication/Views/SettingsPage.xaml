<UserControl x:Class="StreamKing.MainApplication.Views.SettingsPage"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:StreamKing.MainApplication.Views"
             mc:Ignorable="d" 
             d:DesignHeight="650" d:DesignWidth="1000">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="48"></RowDefinition>
            <RowDefinition></RowDefinition>
            <RowDefinition Height="48"></RowDefinition>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="1*"></ColumnDefinition>
            <ColumnDefinition Width="4*"></ColumnDefinition>
            <ColumnDefinition Width="1*"></ColumnDefinition>
        </Grid.ColumnDefinitions>
        <ItemsControl Grid.Row="0" VerticalAlignment="Center" >
            <Button x:Name="BackButton" 
                Width="72" 
                    Height="32" 
                    VerticalAlignment="Center" 
                    HorizontalAlignment="Left"
                    Margin="16,8,8,8" Click="BackButton_Click">
                Back
            </Button>
        </ItemsControl>
        <ItemsControl
                      Grid.Row="0"
                    Grid.Column="1"
                      VerticalAlignment="Center"
                      HorizontalAlignment="Center">
            <TextBlock FontSize="36" 
                       VerticalAlignment="Center"
                       HorizontalAlignment="Center"
                       Foreground="{StaticResource SecondaryColor}">Settings</TextBlock>
        </ItemsControl>
        <ScrollViewer VerticalScrollBarVisibility="Auto"
                      Grid.Row="1"
                      Panel.ZIndex="0"
            Grid.Column="1">
            <ItemsControl FontSize="16"
            >
                <TextBlock FontSize="32" 
                           Margin="8,16,0,0"
                       VerticalAlignment="Center"
                       HorizontalAlignment="Left"
                       Foreground="{StaticResource SecondaryColor}">Profile</TextBlock>
            
            <ItemsControl 
                Grid.Row="0"
                Grid.Column="0"
                IsTabStop="False" Margin="8">
                <TextBlock Text="Username" Foreground="{StaticResource SecondaryColor}"></TextBlock>
                <TextBox x:Name="UsernameInput" IsEnabled="False" TabIndex="1" Style="{StaticResource InputControlBox}"
                 ></TextBox>
            </ItemsControl>
            <ItemsControl 
                Grid.Row="0"
                Grid.Column="1"
                IsTabStop="False" Margin="8">
                <TextBlock Text="Id" Foreground="{StaticResource SecondaryColor}"></TextBlock>
                <TextBox x:Name="IdInput" IsEnabled="False" TabIndex="1" Style="{StaticResource InputControlBox}"
                 ></TextBox>
            </ItemsControl>

            <ItemsControl 
                Grid.Row="1"
                Grid.Column="0"
                IsTabStop="False" Margin="8">
                <TextBlock Text="Email" Foreground="{StaticResource SecondaryColor}"></TextBlock>
                <TextBox x:Name="EmailInput" IsEnabled="False" TabIndex="1" Style="{StaticResource InputControlBox}"
                 ></TextBox>
            </ItemsControl>
            <ItemsControl 
                Grid.Row="1"
                Grid.Column="1"
                IsTabStop="False" Margin="8">
                <TextBlock Text="Account Type" Foreground="{StaticResource SecondaryColor}"></TextBlock>
                <TextBox x:Name="TypeInput" IsEnabled="False" TabIndex="1" Style="{StaticResource InputControlBox}"
                 ></TextBox>
            </ItemsControl>

            <ItemsControl 
                Grid.Row="2"
                Grid.Column="0"
                IsTabStop="False" Margin="8">
                <TextBlock Text="Status" Foreground="{StaticResource SecondaryColor}"></TextBlock>
                <TextBox x:Name="StatusInput" IsEnabled="False" TabIndex="1" Style="{StaticResource InputControlBox}"
                 ></TextBox>
            </ItemsControl>
            <ItemsControl 
                FontSize="16"
                Grid.Row="2"
                Grid.Column="1"
                IsTabStop="False" Margin="8">
                <TextBlock Text="Failed Logins in a Row" Foreground="{StaticResource SecondaryColor}"></TextBlock>
                <TextBox x:Name="FailedLoginsInput" IsEnabled="False" TabIndex="1" Style="{StaticResource InputControlBox}"
                 ></TextBox>
            </ItemsControl>

            <ItemsControl 
                Grid.Row="3"
                Grid.Column="0"
                IsTabStop="False" Margin="8">
                <TextBlock Text="First Name" Foreground="{StaticResource SecondaryColor}"></TextBlock>
                <TextBox x:Name="FirstNameInput" IsEnabled="False" TabIndex="1" Style="{StaticResource InputControlBox}"
                 ></TextBox>
            </ItemsControl>
            <ItemsControl 
                FontSize="16"
                Grid.Row="3"
                Grid.Column="1"
                IsTabStop="False" Margin="8">
                <TextBlock Text="Last Name" Foreground="{StaticResource SecondaryColor}"></TextBlock>
                <TextBox x:Name="LastNameInput" IsEnabled="False" TabIndex="1" Style="{StaticResource InputControlBox}"
                 ></TextBox>
            </ItemsControl>

            <ItemsControl 
                Grid.Row="4"
                Grid.Column="0"
                IsTabStop="False" Margin="8">
                <TextBlock Text="Birthday" Foreground="{StaticResource SecondaryColor}"></TextBlock>
                <TextBox x:Name="BirthdayInput" IsEnabled="False" TabIndex="1" Style="{StaticResource InputControlBox}"
                 ></TextBox>
            </ItemsControl>
            <ItemsControl 
                Grid.Row="4"
                Grid.Column="1"
                IsTabStop="False" Margin="8">
                <TextBlock Text="Created on" Foreground="{StaticResource SecondaryColor}"></TextBlock>
                <TextBox x:Name="CreatedInput" IsEnabled="False" TabIndex="1" Style="{StaticResource InputControlBox}"
                 ></TextBox>
            </ItemsControl>

            <ItemsControl 
                Grid.Row="5"
                Grid.Column="0"
                IsTabStop="False" Margin="8">
                <TextBlock Text="Region" Foreground="{StaticResource SecondaryColor}"></TextBlock>
                <TextBox x:Name="RegionInput" IsEnabled="False" TabIndex="1" Style="{StaticResource InputControlBox}"
                 ></TextBox>
            </ItemsControl>

        </ItemsControl>
        </ScrollViewer>
        <ItemsControl
                      Grid.Row="0"
                    Grid.Column="1"
                      VerticalAlignment="Center"
                      HorizontalAlignment="Center">
            <TextBlock FontSize="36" 
                       VerticalAlignment="Center"
                       HorizontalAlignment="Center"
                       Foreground="{StaticResource SecondaryColor}">Settings</TextBlock>
        </ItemsControl>
    </Grid>
</UserControl>
