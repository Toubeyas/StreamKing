<UserControl x:Class="StreamKing.MainApplication.Views.DataTemplateView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:StreamKing.MainApplication.ViewModels"
             mc:Ignorable="d"
             Background="{StaticResource PrimaryColor}"
             d:DesignHeight="350" d:DesignWidth="250">

    <UserControl.DataContext>
        <local:DataTemplateViewModel/>
    </UserControl.DataContext>

    <ItemsControl IsTabStop="False" FontSize="16" Foreground="{StaticResource SecondaryColor}">
        <Button Background="{StaticResource PrimaryFocusColor}" Height="350" Click="MediaButton_Click" Width="250">
            <StackPanel Width="250" HorizontalAlignment="Center" Height="350">
                <Grid Height="350" Width="250">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="50*"/>
                        <RowDefinition Height="10*"/>
                        <RowDefinition Height="10*"/>
                        <RowDefinition Height="10*"/>
                        <RowDefinition Height="20*"/>
                    </Grid.RowDefinitions>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="7*"/>
                        <ColumnDefinition Width="3*"/>
                    </Grid.ColumnDefinitions>
                    <Border Style="{StaticResource InputBorder}"
                        Margin="8,8,8,8"
                        Grid.Row="0" Grid.Column="0" Grid.ColumnSpan="2">
                        <Image ></Image>
                    </Border>

                    <TextBlock x:Name="MediaTitle" Margin="8,8,8,8" FontSize="12" Grid.Column="0" Grid.Row="1" Text="{Binding Title}"/>
                    <TextBlock x:Name="Provider" Margin="8,8,8,8" FontSize="12" Text="{Binding Provider}" Grid.Column="0" Grid.Row="2"></TextBlock>
                    <ItemsControl IsTabStop="False" Margin="8" FocusVisualStyle="{x:Null}">
                        <ItemsControl.ItemsPanel>
                            <ItemsPanelTemplate>
                                <DockPanel></DockPanel>
                            </ItemsPanelTemplate>
                        </ItemsControl.ItemsPanel>
                        <TextBlock x:Name="Sesons_TextBox" Text="{Binding SeasonString}"
                                   FontSize="12" Margin="8,8,8,8" Grid.Column="0" Grid.Row="3">
                            
                        </TextBlock>
                                   
                        <TextBlock x:Name="AmountSeasnons_TextBox" Text="{Binding Rating}" FontSize="12" Margin="8,8,8,8" Grid.Column="0" Grid.Row="3" ></TextBlock>
                    </ItemsControl>
                    <TextBlock x:Name="Rating" Text="{Binding Rating}" FontSize="12" Margin="8,8,8,8" Grid.Column="0" Grid.Row="3" ></TextBlock>
                    <Border Style="{StaticResource InputBorder}"
                            Margin="8,8,8,8"
                            Grid.Row="1" Grid.Column="1">
                        <TextBlock x:Name="TagTextBox"
                                   TextAlignment="Center"
                                   FontSize="12"
                                   Visibility="Visible" Text="{Binding Tag}"
                                   Grid.Column="1" Grid.Row="1" Margin="0,0,0,0" Background="{Binding TagColor}"/>
                    </Border>
                </Grid>
            </StackPanel>
        </Button>
    </ItemsControl>

</UserControl>